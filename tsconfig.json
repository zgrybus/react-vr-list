{
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "target": "ES5",
    "baseUrl": "src",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/typings/",
    "outDir": "./dist/esm/"
  },
  "exclude": ["node_modules"],
}