{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "test/**/*.ts"
  ]
}